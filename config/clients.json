{
    "state" : {
	"state_manager" : "sm.redis",
	
        "initial_value" : {
	    "nick" : null,
	    "location" : null
	},

	"args" : {
	    "connector" : "database",
	    "expiration_timeout" : 86400000
	}
    },

    "actions" : {
    	"stop" : [
	    {
		"action" : "action.stop",
		"args" : null
	    }
	],

	"error" : [
	    {
		"action" : "action.error",
		"args" : null
	    }
	],

	"reply" : [
	    {
		"action" : "action.send_event",
		"args" : null
	    }
	],

	"store" : [
	    {
		"action" : "action.update_state",
		"args" : null
	    }
	]
    },

    "hooks" : {
	"on_connect" : [
	    {
		"hook" : "utils.console_dump",
		"args" : "Connected!"
	    }
	],

	"on_disconnect" : [
	    {
		"hook" : "utils.console_dump",
		"args" : "Disconnected!"
	    },
	    {
		"hook" : "cp.put",
		"args" : {
		    "connector" : "backend",
		    "endpoint" : "/leave"
		}
	    },
	    {
		"hook" : "cp.put",
		"args" : {
		    "connector" : "backend",
		    "endpoint" : "/cleanup"
		}
	    }
	],

	"on_terminate" : [
	    {
		"hook" : "utils.console_dump",
		"args" : "Terminating!"
	    },
	    {
		"hook" : "utils.echo",
		"args" : {
		    "name" : "hive_error",
		    "args" : [
			{
			    "error" : "terminating",
			    "description" : "Hive is terminating..."
			}
		    ]
		}
	    }
	],

	"authorize" : [
	    {
		"hook" : "cp.post",
		"args" : {
		    "connector" : "backend",
		    "endpoint" : "/authorize"
		}
	    }
	],

	"go" : [
	    {
		"hook" : "cp.post",
		"args" : {
		    "connector" : "backend",
		    "endpoint" : "/go"
		}
	    }
	],

	"say" : [
	    {
		"hook" : "cp.put",
		"args" : {
		    "connector" : "backend",
		    "endpoint" : "/say"
		}
	    }
	],

	"do" : [
	    {
		"hook" : "cp.post",
		"args" : {
		    "connector" : "backend",
		    "endpoint" : "/do"
		}
	    }
	]
    }
}